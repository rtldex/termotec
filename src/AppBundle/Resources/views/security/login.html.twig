{% extends 'AppBundle::layout.html.twig' %}
{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form class="form-horizontal" action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Enter email" id="username" name="_username"
                           value="{{ last_username }}"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="_password"
                           placeholder="Enter password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Autentificare</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
    <div class="clearfix"></div>
{% endblock content %}
